<shortcuts> 
   <programGroup defaultName="MultiMona" location="applications"/> 
   <shortcut name="MultiMona ${project.version}" 
             target="$INSTALL_PATH/multimona.exe" 
             description="MultiMona" 
             workingDirectory="$INSTALL_PATH"
             iconFile="$INSTALL_PATH/multimona.ico" 
             initialState="normal" 
             programGroup="yes"
             desktop="yes" 
             applications="no" 
             startMenu="no" 
             startup="no">
    </shortcut>
    <shortcut name="Uninstall MultiMona ${project.version}" 
             target="$INSTALL_PATH/uninstaller/uninstaller.jar" 
             description="Uninstall MultiMona" 
             initialState="normal" 
             programGroup="yes"
             desktop="no" 
             applications="no" 
             startMenu="no" 
             startup="no">
    </shortcut>
</shortcuts>